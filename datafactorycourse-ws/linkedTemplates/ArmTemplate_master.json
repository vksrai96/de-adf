{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "datafactorycourse-ws"
		},
		"ls_adlscdudev_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://adlscdudev.dfs.core.windows.net/"
		},
		"ls_asql_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "cdu.database.windows.net"
		},
		"ls_asql_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "cdudb"
		},
		"ls_asql_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "cduadmin"
		},
		"ls_stageKeyVault_properties_typeProperties_baseUrl": {
			"type": "string",
			"defaultValue": "https://stage-cdu-vault.vault.azure.net/"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "datafactorycourse-ws_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"ls_stageKeyVault_properties_typeProperties_baseUrl": {
						"value": "[parameters('ls_stageKeyVault_properties_typeProperties_baseUrl')]"
					},
					"ls_adlscdudev_properties_typeProperties_url": {
						"value": "[parameters('ls_adlscdudev_properties_typeProperties_url')]"
					},
					"ls_asql_properties_typeProperties_server": {
						"value": "[parameters('ls_asql_properties_typeProperties_server')]"
					},
					"ls_asql_properties_typeProperties_database": {
						"value": "[parameters('ls_asql_properties_typeProperties_database')]"
					},
					"ls_asql_properties_typeProperties_userName": {
						"value": "[parameters('ls_asql_properties_typeProperties_userName')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "datafactorycourse-ws_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'datafactorycourse-ws_ArmTemplate_0')]"
			]
		}
	]
}